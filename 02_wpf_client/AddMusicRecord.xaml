<Window x:Class="_02_wpf_client.AddMusicRecord"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_wpf_client"
        mc:Ignorable="d"
        Title="AddMusicRecord" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Label Content="Name" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="nameTB" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label Content="Age" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="AgeTB" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Label Content="Price" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2"/>
        <TextBox x:Name="PriceTB" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" />
        <Label Content="Group" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3"/>
        <TextBox x:Name="GroupTB" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" />

        <Button x:Name="Add" Grid.Row="3" Click="Add_Click" Grid.ColumnSpan="3" Margin="133,37,133,0" Grid.RowSpan="2" >Add</Button>
    </Grid>
</Window>
